		<xs:attribute name="nameCase_defaultProvider" type="xs:string" />
		<xs:attribute name="description_defaultProvider" type="xs:string" />

		<xs:sequence>
			<xs:element name="db" type="dbType" maxOccurs="unbounded" />
		</xs:sequence>
	</xs:complexType>

